<div class="container results text-center">

<h2>Local <%= @terms.first.capitalize %> Experts</h2>
<div class="spacer"></div>



<!-- THIS IS THE LOOP -->
<% if @experts.length > 0 %>
<% @experts.each do |expert| %>
 
     <div class="col-sm-4 col-md-3">
     <a href="/expert/<%= expert.id %>" >
      <div class="thumbnail">
             <img src="http://placehold.it/200x150" class="img-responsive">
        <p><span class="name"><%= expert.name %></span></p> 
        <p><span class="rating"><%= (expert.rating * 100).to_i %>%</span> | <span class="wage"><%= expert.hourly_rate %></span></p>
      </div>
    </a>
    </div>



<% end %>
<% else %>
<p><em>Oops,looks likes there is a problem with your search.</em></p>
<% end %>
