 <div class="row">
    <div class="col-sm-4">
      <img src="http://placehold.it/400x400" class="img-responsive">
    </div>
    <div class="col-sm-8">
      <h1><%= @expert.name %></h1>

      <div class="thumbnail badge">
      <span>$<%= @expert.hourly_rate.to_i %>/hr</span>
      </div>

      <% @expert.skills.each do |skill| %>
        <div class="alert alert-success tags" role="alert">
        <%= skill %>
        </div>
      <% end %>

    </div>
    <div class="clearfix visible-xs"></div>
    <div class="col-sm-8">
      <%= @expert.bio %>
    </div>
  </div>


    <div class="row col-sm-12">
    <h1>Reviews</h1>
      <% @expert.reviews.each do |review| %>
        <div class="review">
          <h3><%= review.name %>
          <% if review.rating == 1 %>
            <img src="/assets/icons/happy.png">
          <% else %>
            <img src="/assets/icons/sad.png">
          <% end %>
          </h3>
          
           <p> <%= review.content %></p>
        </div>
      <% end %>
  </div>

</div>
